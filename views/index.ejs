  <body ng-app="heg">
    <nav id="main-nav">
      <div id="logo-container">
        <a class="logo" ui-sref="home"><img src="/images/branding/heg-logo.png"></a>
        <link href='https://fonts.googleapis.com/css?family=Ubuntu:700|Vollkorn' rel='stylesheet' type='text/css'>
        </div>
          <div id="links-container">
          <ul>
            <li><a ui-sref="games" ontouchend="this.onclick=fix">Games</a></li>
